@model List<NhaSachTriThuc.Models.Wishlist>

@{
    ViewData["Title"] = "Danh sách yêu thích";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>Bạn chưa thêm sách nào vào danh sách yêu thích.</p>
}
else
{
    <form asp-action="AddSelectedToCart" method="post">
        <table>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedBookIds" value="@Model[i].Book.BookId" />
                    </td>
                    <td><img src="@("/images/" + Model[i].Book.ImageUrl + ".jpg")" width="80px" /></td>
                    <td>@Model[i].Book.Title</td>
                    <td>@Model[i].Book.Price.ToString("C")</td>
                </tr>
            }
        </table>
        <button type="submit">Thêm vào giỏ hàng</button>
    </form>
}
