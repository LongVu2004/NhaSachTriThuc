            cursor: not-allowed;
        }

    .stock-out {
        color: #dc3545;
        font-size: 0.8rem;
        margin-top: 0.5rem;
    }

    /* Responsive adjustments */


    /* Fade-in animation for cards */
    .book-card {
        animation: fadeIn 0.5s ease-in-out;
    }


    opacity: 0;
    transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>