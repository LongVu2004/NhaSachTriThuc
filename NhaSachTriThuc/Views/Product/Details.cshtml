

@model NhaSachTriThuc.Models.Book
<style>
    /* Custom styles for book details */
    .book-details-container {
        background: #fff;
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.5s ease-in-out;
    }

    .book-image {
        object-fit: cover;
        height: 100px;
        width: 500;
        border-radius: 6px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .book-image:hover {
            transform: scale(1.02);
        }

    .book-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #333;
    }

    .book-author, .book-category, .book-stock, .book-comments {
        font-size: 1.1rem;
        color: #666;
        margin-bottom: 0.75rem;
    }

        .book-stock.out-of-stock {
            color: #dc3545;
        }

    .book-description {
        font-size: 1rem;
        color: #666;
        max-height: 150px;
        overflow-y: auto;
        margin-bottom: 1.5rem;
    }

        .book-description::-webkit-scrollbar {
            width: 6px;
        }

        .book-description::-webkit-scrollbar-thumb {
            background: #adb5bd;
            border-radius: 3px;
        }

    .book-price {
        font-size: 1.5rem;
        font-weight: bold;
        color: #dc3545;
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        color: #fff;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-primary:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

    /* Notification styles */
    .notification {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
        border-radius: 4px;
        font-size: 0.9rem;
        position: relative;
        animation: slideIn 0.3s ease-in-out;
    }

        .notification.success {
            background-color: #e6f4ea;
            color: #28a745;
            border: 1px solid #28a745;
        }

        .notification.error {
            background-color: #f8d7da;
            color: #dc3545;
            border: 1px solid #dc3545;
        }

        .notification .close-btn {
            background: none;
            border: none;
            font-size: 1rem;
            cursor: pointer;
            color: inherit;
            padding: 0 0.5rem;
        }

            .notification .close-btn:hover {
                opacity: 0.7;
            }

    /* Comments container */
    .comments-container {
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 6px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

        .comments-container h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 1rem;
        }

    .comment-item {
        padding: 0.75rem;
        border-bottom: 1px solid #e9ecef;
        transition: background-color 0.2s ease;
    }

        .comment-item:last-child {
            border-bottom: none;
        }

        .comment-item:hover {
            background-color: #f1f3f5;
        }

    .comment-user {
        font-size: 1rem;
        font-weight: 500;
        color: #333;
    }

    .comment-date {
        font-size: 0.85rem;
        color: #6c757d;
        margin-left: 0.5rem;
    }

    .comment-content {
        font-size: 0.95rem;
        color: #495057;
        margin-top: 0.25rem;
    }

    .comment-form {
        margin-top: 1rem;
        padding: 1rem;
        background: #fff;
        border: 1px solid #e9ecef;
        border-radius: 6px;
    }

        .comment-form .form-label {
            font-size: 1rem;
            font-weight: 500;
            color: #333;
        }

        .comment-form .form-control {
            border-radius: 4px;
            border: 1px solid #ced4da;
            font-size: 0.95rem;
        }

            .comment-form .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

    
    

    

    .book-image {
        height: 200px;
        margin-bottom: 1rem;
    }

    .book-title {
        font-size: 1.5rem;
    }

    .book-author, .book-category, .book-stock, .book-comments {
        font-size: 1rem;
    }

    .book-description {
        font-size: 0.9rem;
        max-height: 120px;
    }

    .book-price {
        font-size: 1.25rem;
    }

    .btn-primary {
        font-size: 0.9rem;
        padding: 0.4rem 0.8rem;
    }

    .notification {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
    }

    .comments-container {
        padding: 0.75rem;
    }

        .comments-container h3 {
            font-size: 1.1rem;
        }

    .comment-item {
        padding: 0.5rem;
    }

    .comment-user {
        font-size: 0.9rem;
    }

    .comment-date {
        font-size: 0.8rem;
    }

    .comment-content {
        font-size: 0.9rem;
    }

    .comment-form {
        padding: 0.75rem;
    }

    }
</style>

<div class="container my-4">
    <!-- Notification banner -->
    @if (TempData["Message"] != null)
    {
        <div class="notification success" role="alert" aria-live="assertive">
            <span>@TempData["Message"]</span>
            <button type="button" class="close-btn" onclick="this.parentElement.style.display='none'" aria-label="Close notification">
                ×
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="notification error" role="alert" aria-live="assertive">
            <span>@TempData["Error"]</span>
            <button type="button" class="close-btn" onclick="this.parentElement.style.display='none'" aria-label="Close notification">
                ×
            </button>
        </div>
    }

    <div class="book-details-container" role="article" aria-labelledby="book-title-@Model.BookId">
        <div class="row">
            <div class="col-md-4 col-12">
                <img src="@Model.ImageUrl" class="book-image img-fluid" alt="@Model.Title" loading="lazy" />
            </div>
            <div class="col-md-8 col-12">
                <h2 class="book-title" id="book-title-@Model.BookId">@Model.Title</h2>
                <p class="book-author"><strong>Tác giả:</strong> @Model.Author</p>
                <p class="book-category"><strong>Thể loại:</strong> @(Model.Category?.Name ?? "Không xác định")</p>
                <p class="book-stock @(Model.Quantity <= 0 ? "out-of-stock" : "")" aria-label="Stock status">
                    @(Model.Quantity > 0 ? $"Kho: {Model.Quantity}" : "Hết hàng")
                </p>
                <p class="book-comments"><strong>Bình luận:</strong> @(Model.Comments?.Count ?? 0)</p>
                <div class="comments-container">
                    <h3>Bình luận</h3>
                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        <div class="comment-list">
                            @foreach (var comment in Model.Comments.OrderByDescending(c => c.DatePosted))
                            {
                                <div class="comment-item">
                                    <div class="comment-user">@comment.User?.UserName<span class="comment-date">(@comment.DatePosted.ToString("dd/MM/yyyy HH:mm"))</span></div>
                                    <div class="comment-content">@comment.Content</div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>Chưa có bình luận nào.</p>
                    }
                </div>
                <p class="book-description" aria-describedby="book-desc-@Model.BookId">@Model.Description</p>
                <p class="book-price" aria-label="Price">@Model.Price.ToString("N0") VNĐ</p>
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="id" value="@Model.BookId" />
                    <button type="submit" class="btn btn-primary" aria-label="Add @Model.Title to cart" @(Model.Quantity <= 0 ? "disabled" : "")>
                        <i class="bi bi-cart"></i> Thêm vào giỏ hàng
                    </button>
                </form>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="comment-form">
                        <form asp-controller="Comments" asp-action="Create" method="post">
                            <input type="hidden" name="bookId" value="@Model.BookId" />
                            <div class="mb-3">
                                <label for="content" class="form-label">Nội dung bình luận</label>
                                <textarea name="content" class="form-control" required rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Gửi bình luận</button>
                        </form>
                    </div>
                }
                else
                {
                    <p>Vui lòng <a href="/Identity/Account/Login">đăng nhập</a> để bình luận.</p>
                }
            </div>
        </div>
    </div>
</div>