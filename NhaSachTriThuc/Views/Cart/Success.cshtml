@model NhaSachTriThuc.Models.Order

<h2>Đặt hàng thành công</h2>

<p>Cảm ơn bạn <strong>@Model.CustomerName</strong> đã đặt hàng.</p>
<p>Chúng tôi sẽ giao hàng đến địa chỉ: <strong>@Model.CustomerAddress</strong>.</p>
<p>Số điện thoại liên hệ: <strong>@Model.CustomerPhone</strong></p>
<p>Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy")</p>
<p>Tổng tiền: <strong>@Model.TotalAmount.ToString("n0") đ</strong></p>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Quay về trang chủ</a>
    