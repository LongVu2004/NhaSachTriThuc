@model List<NhaSachTriThuc.Models.Order>

<h2>Lịch sử đơn hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalAmount.ToString("N0") đ</td>
                <td>@order.Status</td>
                <td><a href="/Order/Details/@order.OrderId" class="btn btn-primary btn-sm btn-details">Chi tiết</a></td>
            </tr>
        }
    </tbody>
</table>
