@using NhaSachTriThuc.Models
@model Book
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>✏️ Chỉnh sửa sách</h3>

<form asp-controller="Admin" asp-action="EditBook" method="post" enctype="multipart/form-data">
    <input type="hidden" name="BookId" value="@Model.BookId" />

    <div class="mb-3">
        <label>Tiêu đề</label>
        <input class="form-control" name="Title" value="@Model.Title" required />
    </div>
    <div class="mb-3">
        <label>Tác giả</label>
        <input class="form-control" name="Author" value="@Model.Author" required />
    </div>
    <div class="mb-3">
        <label>Giá bán</label>
        <input class="form-control" name="Price" type="number" value="@Model.Price" required />
    </div>
    <div class="mb-3">
        <label>Mô tả</label>
        <textarea class="form-control" name="Description">@Model.Description</textarea>
    </div>
    <div class="mb-3">
        <label>Ảnh hiện tại</label><br />
        <img src="@Model.ImageUrl" width="100" />
    </div>
    <div class="mb-3">
        <label>Chọn ảnh mới (nếu muốn thay)</label>
        <input class="form-control" type="file" name="ImageFile" />
    </div>
    <div class="mb-3">
        <label>Danh mục</label>
        @{
            var selectedId = Model.CategoryId;
        }

        <select name="CategoryId" class="form-control">
            <option value="1" selected="@(selectedId == 1)">Văn học</option>
            <option value="2" selected="@(selectedId == 2)">Kỹ năng sống</option>
            <option value="3" selected="@(selectedId == 3)">Giáo trình</option>
            <option value="4" selected="@(selectedId == 4)">Kinh tế</option>
            <option value="5" selected="@(selectedId == 5)">Nuôi dạy </option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="/Admin/Products" class="btn btn-secondary">Hủy</a>
</form>
