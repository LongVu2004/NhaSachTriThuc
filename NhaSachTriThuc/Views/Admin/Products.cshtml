@using NhaSachTriThuc.Models
@model IEnumerable<Book>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="display-6 fw-bold text-dark"><i class="fas fa-book me-2"></i>Danh sách sách</h3>
            <a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Quay lại</a>
            <a asp-area="Admin" asp-controller="Admin" asp-action="AddBook" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Thêm sách mới</a>
        </div>

        <!-- Search and Filter -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo tiêu đề hoặc tác giả" aria-label="Tìm kiếm sách">
                </div>
            </div>
            <div class="col-md-3">
                <select id="categoryFilter" class="form-select" aria-label="Lọc theo danh mục">
                    <option value="">Tất cả danh mục</option>
                    <!-- Categories would be dynamically populated -->
                </select>
            </div>
            <div class="col-md-3 text-end">
                <button class="btn btn-outline-secondary" id="toggleViewBtn">
                    <i class="fas fa-table me-2"></i>Chuyển sang dạng bảng
                </button>
            </div>
        </div>

        <!-- Card View -->
        <div id="cardView" class="row g-4">
            @foreach (var book in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 book-item" data-title="@book.Title" data-author="@book.Author">
                    <div class="card h-100 shadow-sm" aria-labelledby="book-title-@book.BookId">
                        <img src="@book.ImageUrl" class="card-img-top book-image" alt="Bìa sách @book.Title" loading="lazy" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-dark mb-2" id="book-title-@book.BookId">@book.Title</h5>
                            <p class="card-text text-muted mb-1"><strong>Tác giả:</strong> @book.Author</p>
                            <p class="card-text text-muted mb-3"><strong>Giá:</strong> @book.Price.ToString("N0") đ</p>
                            <div class="mt-auto d-flex gap-2">
                                <a href="/Admin/EditBook/@book.BookId" class="btn btn-outline-warning btn-sm flex-grow-1" title="Sửa sách"><i class="fas fa-edit"></i> Sửa</a>
                                <a href="/Admin/DeleteBook/@book.BookId" class="btn btn-outline-danger btn-sm flex-grow-1 delete-btn" title="Xóa sách" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-book-id="@book.BookId" data-book-title="@book.Title"><i class="fas fa-trash"></i> Xóa</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Table View -->
        <div id="tableView" class="d-none">
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Bìa sách</th>
                            <th scope="col">Tiêu đề</th>
                            <th scope="col">Tác giả</th>
                            <th scope="col">Giá (đ)</th>
                            <th scope="col">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr class="book-item" data-title="@book.Title" data-author="@book.Author">
                                <td><img src="@book.ImageUrl" class="img-thumbnail" style="width: 50px; height: 50px;" alt="Bìa sách @book.Title" loading="lazy" /></td>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td>@book.Price.ToString("N0")</td>
                                <td>
                                    <a href="/Admin/EditBook/@book.BookId" class="btn btn-outline-warning btn-sm" title="Sửa sách"><i class="fas fa-edit"></i></a>
                                    <a href="/Admin/DeleteBook/@book.BookId" class="btn btn-outline-danger btn-sm delete-btn" title="Xóa sách" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-book-id="@book.BookId" data-book-title="@book.Title"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Phân trang sách" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled"><a class="page-link" href="#">Trước</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class=";EA0</li>
                <li class="page-item"><a class="page-link" href="#">Sau</a></li>
            </ul>
        </nav>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteLabel">Xác nhận xóa</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>
                    <div class="modal-body">
                        Bạn có chắc chắn muốn xóa sách <span id="deleteBookTitle"></span>?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <a id="confirmDeleteBtn" class="btn btn-danger">Xóa</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            document.querySelectorAll('.book-item').forEach(item => {
                const title = item.dataset.title.toLowerCase();
                const author = item.dataset.author.toLowerCase();
                item.style.display = (title.includes(searchTerm) || author.includes(searchTerm)) ? '' : 'none';
            });
        });

        // Toggle card/table view
        document.getElementById('toggleViewBtn').addEventListener('click', function () {
            const cardView = document.getElementById('cardView');
            const tableView = document.getElementById('tableView');
            const isTableView = tableView.classList.contains('d-none');
            if (isTableView) {
                cardView.classList.add('d-none');
                tableView.classList.remove('d-none');
                this.innerHTML = '<i class="fas fa-th-large me-2"></i>Chuyển sang dạng thẻ';
            } else {
                tableView.classList.add('d-none');
                cardView.classList.remove('d-none');
                this.innerHTML = '<i class="fas fa-table me-2"></i>Chuyển sang dạng bảng';
            }
        });

        // Delete confirmation modal
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const bookTitle = this.dataset.bookTitle;
                const bookId = this.dataset.bookId;
                document.getElementById('deleteBookTitle').textContent = bookTitle;
                document.getElementById('confirmDeleteBtn').href = `/Admin/DeleteBook/${bookId}`;
            });
        });
    </script>
}

